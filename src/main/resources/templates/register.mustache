<html lang="en">
<head>
    <title>Create a new account</title>
    <link rel="stylesheet" href="https://unpkg.com/marx-css/css/marx.min.css">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <style>
        .content {
            padding: 20px;
            max-width: 600px;
            margin: 80px auto 0;
        }

        button {
            cursor: pointer;
        }

        button.secondary {
            background-color: orangered;
        }

        #login-prompt {
            text-align: center;
        }

        .error {
            margin: 5px 0;
            padding: 5px;
            background-color: rgba(240, 128, 128, 0.2);
            color: crimson;
            border: 1px solid crimson;
            border-radius: 4px;
        }
    </style>
</head>
<body>
<div>
    <div class="content">
        <div id="registration-form">
            <h3>Create a new account for MockTTP</h3>
            {{^complete}}

                <form action="/register" method="post">
                    {{#error}}
                        <div class="error">
                            {{error}}
                        </div>
                    {{/error}}
                    <div class="field">
                        <label for="name">
                            Name:
                        </label>
                        <input id="name" name="name" type="text" placeholder="John Doe" {{#values.name}}
                               value="{{values.name}}" {{/values.name}}>
                    </div>
                    <div class="field">
                        <label for="email">
                            Email:
                        </label>

                        <input id="email" name="email" type="email" placeholder="abc@example.com" {{#values.email}}
                               value="{{values.email}}" {{/values.email}}>
                    </div>
                    <div class="field">
                        <label for="password">
                            Password:
                        </label>
                        <input id="password" name="password" type="password" placeholder="A tough p@$$w0rd">
                    </div>

                    <div style="margin-top: 20px" class="field">
                        <button>Register me!</button>
                    </div>
                </form>
            {{/complete}}
            {{#complete}}
                <h4>Your account is ready, log in to your account!</h4>
            {{/complete}}
        </div>
        <div id="login-prompt">
            <hr/>
            <a href="/login">
                <button class="secondary"> Already have an account? Login</button>
            </a>
        </div>
    </div>
</div>
</body>

</html>